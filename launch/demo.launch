<?xml version="1.0" encoding="UTF-8" ?>
<launch>
    <arg name="rviz" default="true"/>
    <arg name="from_bag" default="true"/>
    <arg name="bag" default="$(find supervised_depth_correction)/data/explorer_x1_rgbd_traj_2021-09-22-14-34-21.bag"/>
    <arg name="start" default="0.0"/>
    <arg name="rate" default="0.3"/>
    <arg name="odom" default="gt"/>
    <arg name="device" default="cuda:0"/>
    <arg name="inference_node" default="gradslam_inference"/>
    <arg name="pub_gt" default="false"/>

    <group if="$(arg from_bag)">
        <param name="use_sim_time" value="true"/>
        <include file="$(dirname)/play_bag.launch" pass_all_args="true"/>
    </group>

    <!-- Step inference -->
    <node name="supervised_depth_correction" pkg="supervised_depth_correction" type="$(arg inference_node)" output="screen">
        <param name="odometry" value="$(arg odom)"/>
        <param name="device" value="$(arg device)"/>
    </node>

    <node if="$(arg pub_gt)" name="gt_world_publisher" pkg="supervised_depth_correction" type="gt_world_pub" output="screen"/>

    <!-- RVIZ -->
    <node if="$(arg rviz)" name="rviz" pkg="rviz" type="rviz"
          args="-d $(find supervised_depth_correction)/config/rviz/config.rviz"/>
</launch>
