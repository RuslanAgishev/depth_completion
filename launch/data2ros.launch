<?xml version="1.0" encoding="UTF-8" ?>
<launch>
    <arg name="rviz" default="true"/>
    <arg name="odom" default="gradicp"/>
    <arg name="dataset" default="tum"/>

    <!-- Step inference -->
    <node name="supervised_depth_correction" pkg="supervised_depth_correction" type="$(arg dataset)2ros.py" output="screen">
        <param name="odometry" value="$(arg odom)"/>
    </node>

    <!-- RVIZ -->
    <node if="$(arg rviz)" name="rviz" pkg="rviz" type="rviz"
          args="-d $(find supervised_depth_correction)/config/rviz/config.rviz"/>
</launch>
